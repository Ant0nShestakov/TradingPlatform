@using AVS.Models.UserModels;
@model User;
@{
    ViewData["Title"] = "Регистрация";
}


<div class="main_container">
    <div class="rnd">
    <content class="forms">
            <div class="button_group" id="reg_button_group">
            <button class="unactive_buttom">Вход</button>
            <button class="active_buttom">Регистрация</button>
        </div>

            <form method="post" asp-controller="Registration" asp-action="Registration">
            <input type="text" placeholder="Фамилия" asp-for="SecondName" />
            <span asp-validation-for="SecondName"></span>

            <input type="text" placeholder="Имя" asp-for="Name" />
            <span asp-validation-for="Name"></span>

            <input type="text" placeholder="Отчество" asp-for="ThirdName" />
                <span asp-validation-for="ThirdName"></span>

            <input type="email" placeholder="Почта" asp-for="Email" />
            <span asp-validation-for="Email"></span>

            <input type="tel" placeholder="Номер телефона" asp-for="NumberPhone" />
            <span asp-validation-for="NumberPhone"></span>

            <input type="password" placeholder="Пароль" asp-for="Password" />
            <span asp-validation-for="Password"></span>

            <input type="password" placeholder="Подтверждение пароля" asp-for="ConfirmPassword" />
            <span asp-validation-for="Password"></span>
            <label class="checkbox_label">
                <input type="checkbox" required />Я согласен на обработку персональных данных
            </label>
            <label class="checkbox_label">
                <input type="checkbox" required />Я согласен с <a href="#">пользовательским соглашением</a>
            </label>
            <input class="form_submit" type="submit" value="Зарегистрироваться" />
        </form>
    </content>
    </div>
    </div>